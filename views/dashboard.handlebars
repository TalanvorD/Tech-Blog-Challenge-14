<section>
    <h2>Post something new!</h2>
        <div class="d-grid gap-2">    
    <form class="new-post-form">

            <label for="post-title">Title</label>
            <input type="text" id="post-title" name="post-title"/>
        </div>
        <div class="d-grid gap-2">
            <label for="post-text">Content</label>
            <textarea id="post-text" name="post-text"></textarea>

        <button type="submit" class="btn btn-primary">Add your post!</button>        </div>
    </form>
</section>
{{#if posts.length}}
<section class="your-posts">
    <h2>Your Posts</h2>
    <ul>
        {{#each posts as |post|}}
        <li>
            {{> postdata post}}
            <a href="/dashboard/edit/{{post.id}}" class="btn btn-primary">Edit Post</a>
        </li>
        {{/each}}
    </ul>
</section>
{{/if}}

<script src="/js/newpost.js"></script>