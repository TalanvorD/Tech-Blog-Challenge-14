<section>
    <a href="/dashboard">Return to Dashboard</a>
    <h2>Edit Post</h2>
    <form class="edit-post-form">
        <div>
            <input type="text" name="post-title" value="{{post.title}}" />
            <br><br>
            <textarea id="post-text" name="post-text"></textarea>
            <p>{{post.text}}</p>
        </div>
        <div>
        {{#if post.comments}}
        <a href="/post/{{post.id}}">{{post.comments.length}} {{format_comment "comment" post.comments.length}}</a>
        {{else}}
        <p>No comments.</p>
        {{/if}}
        </div>
        <button type="submit" class="btn btn-primary">Save Post</button>
        <button type="button" class="btn btn-danger delete-post-btn">Delete Post</button>
    </form>
</section>

<form class="comment-form">
    <div>
        <textarea name="comment-body"></textarea>
    </div>
    <div>
        <button type="submit">Add Comment</button>
    </div>
</form>

{{> comments post.comments}}

<script src="/js/editpost.js"></script>
<script src="/js/deletepost.js"></script>
<script src="/js/comment.js"></script>